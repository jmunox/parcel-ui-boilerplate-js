{
  "name": "basic-parcel-app",
  "version": "2.0.0",
  "description": "Basic Parcel-2 UI boilerplate - Javascript",
  "main": "index.js",
  "author": "jmunox",
  "license": "MIT",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "engines": {
    "node": ">=8",
    "yarn": "*"
  },
  "dependencies": {
    "@risingstack/react-easy-state": "^6.1.3",
    "abortcontroller-polyfill": "^1.5.0",
    "bulma": "^0.9.4",
    "classnames": "^2.2.6",
    "components": "^0.1.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-router-dom": "^5.3.0",
    "whatwg-fetch": "^3.3.1"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.14.0",
    "@parcel/transformer-sass": "^2.10.3",
    "api-now": "^0.5.4",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "faker": "^4.1.0",
    "parcel": "^2.0.0",
    "postcss-modules": "^4.3.0",
    "rimraf": "^3.0.2",
    "sass": "^1.32.0"
  },
  "scripts": {
    "build": "rimraf ./dist && parcel build ./src/index.html",
    "start": "parcel serve ./src/index.html",
    "mock-api": "$(cat .env | xargs -n1 echo export) && api-now ./tools/mockData/jsonData.js --port $API_PORT",
    "serve": "api-now --static ./dist",
    "dev": "concurrently -r \"npm:start\" \"npm:mock-api\""
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "parcel",
    "parcelui",
    "react",
    "router",
    "css",
    "sass",
    "bulma"
  ],
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid"
  },
  "postcss": {
    "modules": true,
    "plugins": {
      "postcss-modules": {
        "localsConvention": "camelCase"
      }
    }
  },
  "alias": {
    "components": "./src/components",
    "stores": "./src/stores",
    "utils": "./src/utils"
  }
}
